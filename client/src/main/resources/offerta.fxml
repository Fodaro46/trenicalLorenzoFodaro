<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.trenical.client.controller.OffertaController"
          hgap="10" vgap="10" alignment="CENTER"
          style="-fx-padding: 20;">

    <Label text="🎁 Promozione Attiva" style="-fx-font-size: 18px;" GridPane.columnSpan="2"/>

    <Label text="Tipo:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <Label fx:id="tipoLabel" text="-" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Prezzo Scontato:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <Label fx:id="prezzoLabel" text="-" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Descrizione:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <Label fx:id="descrizioneLabel" text="-" wrapText="true" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
</GridPane>
