<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.trenical.client.controller.TicketHistoryController"
      spacing="10" alignment="CENTER"
      style="-fx-padding: 20;">

    <Label text="Storico Biglietti" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

    <TableView fx:id="tableView" prefHeight="250" prefWidth="800">
        <columns>
            <TableColumn fx:id="colPartenza" text="Partenza" prefWidth="150"/>
            <TableColumn fx:id="colArrivo" text="Arrivo" prefWidth="150"/>
            <TableColumn fx:id="colData" text="Data" prefWidth="100"/>
            <TableColumn fx:id="colOrario" text="Orario" prefWidth="80"/>
            <TableColumn fx:id="colStato" text="Stato" prefWidth="100"/>
            <TableColumn fx:id="colPrezzo" text="Prezzo" prefWidth="100"/>
        </columns>
    </TableView>
</VBox>
