<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.trenical.client.controller.AcquistoController"
      alignment="CENTER" spacing="10" style="-fx-padding: 20;">

    <!-- Label per mostrare la tratta selezionata -->
    <Label fx:id="trattaLabel" text="Tratta selezionata: -"/>

    <!-- Label per mostrare il prezzo -->
    <Label fx:id="prezzoLabel" text="Prezzo: -"/>

    <!-- DatePicker per scegliere la data -->
    <DatePicker fx:id="dataPicker"/>

    <!-- Bottone che richiama onConfirmAcquisto() -->
    <Button text="Conferma Acquisto" onAction="#onConfirmAcquisto"/>
</VBox>
